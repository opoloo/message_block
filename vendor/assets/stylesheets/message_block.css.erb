.message_block {
  position: fixed;
  z-index: 99999;
  top: 20px;
  right: 20px;
  width: 400px; 
  background-color: rgba(0, 0, 0, 0.75);
  border: 1px solid #000;
  border-radius: 5px;
  cursor: pointer;
}

a#close_notification {
  display: block;
  position: absolute;
  top: 5px;
  right: 5px;
  width: 20px;
  height: 20px;
  overflow: hidden;
  text-indent: -99999px;
  background: url(<%= asset_path("message_block/close.png") %>) center center no-repeat;
}

.message_block ul {
  display: table;
  /*margin: 0 auto;*/
  list-style: none;
  padding: 20px;
}
.message_block ul li {
  margin-left: 30px;
  color: #fff;
}

.message_block ul li a {
  height: 40px;
  width: auto;
  display: inline-block;
  padding: 0px 17px;
  line-height: 40px;
  color: #fff;
  background-color: #752b50;
  margin: 0px 5px 0px 0px;
  font-family: 'Merriweather Sans', sans-serif;
  font-weight: 700;
  font-size: 13px;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.message_block ul li a:hover {
  background-color: #501d37;
  color: #fff;
}

.message_block div {
  margin-top:15px;
}

.message_block ul {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 20px no-repeat;
}

.message_block ul.error {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 20px no-repeat;
}

.message_block ul.alert {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 20px no-repeat;
}

.message_block ul.info {
  background: url(<%= asset_path("message_block/ic_action_tick.png") %>) 16px 20px no-repeat;
}

.message_block ul.notice {
  background: url(<%= asset_path("message_block/ic_action_tick.png") %>) 16px 20px no-repeat;
}

.message_block ul.confirm {
  background: url(<%= asset_path("message_block/ic_action_tick.png") %>) 16px 20px no-repeat;
}

.message_block ul.warn {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 20px no-repeat;
}

