.message_block {
  position: fixed;
  z-index: 99999;
  top: 0;
  left: 0;
  width: 100%; 
  background-color: #000;
  opacity: 0.8;
  -webkit-box-shadow: 0 5px 10px #000 ;
  -moz-box-shadow: 0 5px 10px #000 ;
  box-shadow: 0 5px 10px #000 ;
  cursor: pointer;
}

a#close_notification {
  display: block;
  position: absolute;
  top: 5px;
  right: 5px;
  width: 20px;
  height: 20px;
  overflow: hidden;
  text-indent: -99999px;
  background: url(<%= asset_path("message_block/close.png") %>) center center no-repeat;
}

.message_block ul {
  display: table;
  margin: 0 auto;
  list-style: none;
  padding: 20px;
}
.message_block ul li {
  margin-left: 30px;
}

.message_block ul {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 50% no-repeat;
}

.message_block ul.error {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 50% no-repeat;
}

.message_block ul.alert {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 50% no-repeat;
}

.message_block ul.info {
  background: url(<%= asset_path("message_block/ic_action_tick.png") %>) 16px 50% no-repeat;
}

.message_block ul.notice {
  background: url(<%= asset_path("message_block/ic_action_tick.png") %>) 16px 50% no-repeat;
}

.message_block ul.confirm {
  background: url(<%= asset_path("message_block/ic_action_tick.png") %>) 16px 50% no-repeat;
}

.message_block ul.warn {
  background: url(<%= asset_path("message_block/ic_action_warning.png") %>) 16px 50% no-repeat;
}

